<Window x:Class="MemoryTiles.PlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Play" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Button Content="New Game"  Click="NewGameButton_Click" Margin="0 0 0 10" Width="150" />
            <Button Content="Open Game" Click="OpenGameButton_Click" Margin="0 0 0 10" Width="150" />
            <Button Content="Statistics" Click="StatisticsButton_Click" Margin="0 0 0 10" Width="150" />
            <Button Content="Credits" Click="CreditsButton_Click" Margin="0 0 0 10" Width="150" />
        </StackPanel>

        <Button Content="Cancel" Grid.Row="1" Click="CancelButton_Click" Margin="10" Width="100" />
    </Grid>
</Window>